{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Voter Turnout by State in Malaysiaâ€™s 15th General Election (2022)",
  "width": 800,
  "height": 450,
  "projection": {"type": "equalEarth"},
  "data": {
        "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-Week9-Homework/refs/heads/main/js/ne_10m.topojson",
        "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
      },
  "transform": [
        { "calculate": "upper(datum.properties.name_en)", "as": "state_upper" },
        {
          "lookup": "state_upper",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-Week9-Homework/main/data/state_turnout_ge15.csv"
            },
            "key": "state",
            "fields": ["turnout_percent", "registered_voters", "voted"]
          }
        }
      ],
  "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.7},
  "encoding": {
        "color": {
          "field": "turnout_percent",
          "type": "quantitative",
          "bin": true,
          "title": "Voter Turnout Rate(%)", 
          "scale": {
              "range": ["#feedde", "#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
            } 
        },
        "tooltip": [
          {"field": "properties.name_en", "type": "nominal", "title": "State"},
          {"field": "turnout_percent", "type": "quantitative", "title": "Turnout (%)", "format": ".2f"},
          {"field": "registered_voters", "type": "quantitative", "title": "Registered"},
          {"field": "voted", "type": "quantitative", "title": "Voted"}
        ]
      }
  }
    

  


  